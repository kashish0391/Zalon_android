<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Campaign Name"
            android:textColor="#000"
            android:layout_weight="0.10" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/nxtcampname"
            android:background="@drawable/shape"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/btnmarketingstrt"
                android:layout_width="120dp"
                android:layout_height="38dp"
                android:text="Start Date"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginLeft="30dp"
                android:onClick="setDate">

            </TextView>
            <TextView
                android:layout_width="90dp"
                android:text="Starts at"
                android:layout_marginLeft="10dp"
                android:id="@+id/nxtmarketingstrt"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="End Date"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginLeft="60dp"
                android:onClick="setDate1">

            </TextView>
            <TextView
                android:layout_width="90dp"
                android:text="Ends at"
                android:layout_marginLeft="10dp"
                android:id="@+id/nxtbtnmarketing"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="50dp"
                android:id="@+id/nxttarget"
                android:layout_height="40dp" />


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Type Your Message"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="characters"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/nxtid"
           android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="400dp"
            android:id="@+id/nxtmsg"
            android:background="@drawable/shape"
            android:layout_marginLeft="100dp"
            android:layout_height="100dp" />


    </LinearLayout>


    </LinearLayout>